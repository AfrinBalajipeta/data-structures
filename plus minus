#include <stdio.h>
void plusMinus(int n, int arr[]) {
    double pos = 0, neg = 0, zero = 0;
    for (int i = 0; i < n; i++) {
        if (arr[i] > 0) pos++;
        else if (arr[i] < 0) neg++;
        else zero++;
    }
    printf("%.6f\n", pos / n);
    printf("%.6f\n", neg / n);
    printf("%.6f\n", zero / n);
}
int main() {
    int n;
    scanf("%d", &n);
    int arr[n];
    for (int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }
    plusMinus(n, arr);
    return 0;
}
